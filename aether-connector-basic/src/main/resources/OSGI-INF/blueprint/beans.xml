<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<bean id="repositoryLayoutProvider" class="org.eclipse.aether.connector.basic.DefaultRepositoryLayoutProvider">
		<property name="repositoryLayoutFactory">
			<list>
				<bean class="org.eclipse.aether.connector.basic.Maven2RepositoryLayoutFactory" />
			</list>
		</property>
	</bean>
	<bean id="fileProcessor" class="org.eclipse.aether.connector.basic.DefaultFileProcessor" />

	<reference-list id="transporterFactories" interface="org.eclipse.aether.spi.connector.transport.TransporterFactory" />
	<bean id="transporterProvider" class="org.eclipse.aether.connector.basic.DefaultTransporterProvider">
		<property name="transporterFactories" ref="transporterFactories" />
	</bean>

	<bean id="checksumPolicyProvider" class="org.eclipse.aether.connector.basic.DefaultChecksumPolicyProvider" />
	<service ref="checksumPolicyProvider" interface="org.eclipse.aether.spi.connector.checksum.ChecksumPolicyProvider" />

	<bean id="repositoryConnectorFactory" class="org.eclipse.aether.connector.basic.BasicRepositoryConnectorFactory">
		<property name="repositoryLayoutProvider" ref="repositoryLayoutProvider" />
		<property name="transporterProvider" ref="transporterProvider" />
		<property name="checksumPolicyProvider" ref="checksumPolicyProvider" />
		<property name="fileProcessor" ref="fileProcessor" />
	</bean>
	<service ref="repositoryConnectorFactory" interface="org.eclipse.aether.spi.connector.RepositoryConnectorFactory" />

</blueprint>
